---
const { pregunta, respuesta } = Astro.props;
---

<article class="preguntas_card">
  <div class="preguntas_answer">
    <h3 class="pregunta_titulo">{pregunta}</h3>
    <p class="questions__show">{respuesta}</p>
  </div>
</article>

<style>
  .preguntas_card {
    padding: 1.5rem 2rem;
    margin: 1rem 0;
    display: flex;
    justify-content: center;
  }

  .preguntas_answer {
    background: #ffffff;
    border-radius: 12px;
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.05);
    padding: 1.5rem 2rem;
    max-width: 1000px;
    width: 100%;
    transition: box-shadow 0.3s ease, transform 0.3s ease;
  }

  .preguntas_answer:hover {
    box-shadow: 0 12px 24px rgba(0, 0, 0, 0.08);
    transform: translateY(-4px);
  }

  .pregunta_titulo {
    font-size: 1.6rem;
    font-weight: 700;
    color: #D62270;
    margin-bottom: 0.75rem;
  }

  .questions__show {
    font-size: 1.1rem;
    color: #444;
    line-height: 1.6;
  }
</style>
